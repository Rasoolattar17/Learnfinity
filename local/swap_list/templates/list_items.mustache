@template local_swap_list/list_items
}}

{{#list}}
<li class="list-group-item list-group-item-action swap-list-list-item cursor-pointer {{#item_disable}}disabled list-group-item-dark{{/item_disable}}"
    title="{{list_item_text}}"
    data-id="{{list_item_data_id}}" data-value="{{list_item_data_value}}"
    {{list-item-attributes}}>
    <i class="fa fa-check list-item-check d-none"></i>
    {{list_item_text}}
</li>
{{/list}}
{{^list}}
<div class="loader"></div>
{{/list}}
