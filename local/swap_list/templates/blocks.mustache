{{!
@template local_swap_list/blocks
}}

<div id="local_swap_list">
    <div class="row form-group align-items-center">

        <div class="col-12 col-md-5">
            {{#left}}
            {{> local_swap_list/block}}
            {{/left}}
        </div>

        <div class="col-12 col-md-2 swap-buttons text-center">
            <div>
                <button type="button"
                    class="btn btn-sm btn-primary move-left-btn mb-3" aria-label="Swap left">
                    <i class="fa fa-arrow-left swap-left"></i>
                </button>
            </div>
            <div>
                <button type="button"
                    class="btn btn-sm btn-primary move-right-btn" aria-label="Swap right">
                    <i class="fa fa-arrow-right swap-right"></i>
                </button>
            </div>
        </div>

        <div class="col-12 col-md-5">
            {{#right}}
            {{> local_swap_list/block}}
            {{/right}}
        </div>

    </div>
</div>
